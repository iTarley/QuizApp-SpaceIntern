<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/dimen_6dp"
    app:cardCornerRadius="@dimen/dimen_22dp"
    android:id="@+id/answerCardView"
    android:backgroundTint="@color/neutral_light_gray"
    app:elevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingHorizontal="@dimen/dimen_30dp"
        android:paddingVertical="@dimen/dimen_22dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/optionTitleTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/casual_text_style_bold"
            android:layout_marginEnd="@dimen/dimen_20dp"
            android:layout_weight="1"
            android:textColor="@color/neutral_dark_grey"
            tools:text="@tools:sample/lorem" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/correctPointTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_star"
            android:drawablePadding="@dimen/dimen_2dp"
            android:text="+1"
            android:textAlignment="viewEnd"
            android:textColor="@color/neutral_white"
            android:visibility="gone" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
